<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_food_truck"
            android:transitionName="splashScreenIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:elevation="@dimen/elevation5"/>
        <TextView
            android:id="@+id/tv_app_name"
            android:text="@string/app_name"
            android:layout_below="@id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="48dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_google"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            android:id="@+id/googleBtn"
            android:layout_marginBottom="@dimen/margin16"
            android:layout_below="@id/tv_app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/btn_horizontal_margin"
            android:layout_marginLeft="@dimen/btn_horizontal_margin"
            android:foreground="@drawable/ripple"
            android:elevation="@dimen/elevation5">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/googlepluslogo"
                android:tint="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/googleLogo"/>
            <TextView
                android:id="@+id/googleBtnTextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/google_btn_text"
                android:textSize="@dimen/login_btn_text_size"
                android:layout_toRightOf="@id/googleLogo"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/margin8"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:id="@+id/facebookBtn"
            android:layout_below="@id/googleBtn"
            android:layout_alignLeft="@+id/googleBtn"
            android:layout_alignStart="@+id/googleBtn"
            android:layout_alignEnd="@id/googleBtn"
            android:layout_alignRight="@id/googleBtn"
            android:background="@drawable/rounded_corners_fb"
            android:foreground="@drawable/ripple"
            android:elevation="@dimen/elevation5">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/facebooklogo"
                android:tint="@android:color/white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/facebookLogo"/>
            <TextView
                android:id="@+id/facebookBtnTextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/facebook_btn_text"
                android:textSize="@dimen/login_btn_text_size"
                android:layout_toRightOf="@id/facebookLogo"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
</layout>