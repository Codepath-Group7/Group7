<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fullscreen_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                tools:context="com.codepath.com.sffoodtruck.ui.splashscreen.SplashScreenActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/splashScreenIcon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:transitionName="splashScreenIcon"
            app:srcCompat="@drawable/ic_food_truck"/>
        <TextView
            android:id="@+id/splashScreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/splashScreenIcon"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin16"
            android:text="@string/app_name"/>
    </RelativeLayout>

</RelativeLayout>
