<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.codepath.com.sffoodtruck.ui.userprofile.UserProfileFragment">
    <data>
        <variable
            name="user"
            type="com.google.firebase.auth.FirebaseUser"/>
    </data>

    <RelativeLayout
        android:id="@+id/rlUserProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/clUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:background="@android:color/transparent">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbarLayout"
                    android:layout_width="match_parent"
                    app:contentScrim="?attr/colorPrimary"
                    android:layout_height="match_parent"
                    app:title="@{user.displayName}"
                    app:expandedTitleMarginTop="@dimen/margin32"
                    app:expandedTitleGravity="bottom|center_horizontal"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <LinearLayout
                        android:fitsSystemWindows="true"
                        android:id="@+id/llUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:orientation="vertical"
                        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                        app:layout_collapseMode="parallax">

                        <RelativeLayout
                            android:fitsSystemWindows="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:id="@+id/flBanner"
                                android:fitsSystemWindows="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivBanner"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@color/colorPrimary"
                                    android:fitsSystemWindows="true"
                                    android:scaleType="fitXY"

                                    />
                            </FrameLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-40dp"
                                android:layout_below="@id/flBanner"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivProfile"
                                    android:layout_width="@dimen/image_width"
                                    android:layout_height="@dimen/image_width"
                                    android:layout_marginStart="@dimen/margin24"
                                    android:layout_marginLeft="@dimen/margin24"
                                    android:layout_marginRight="@dimen/margin12"
                                    android:layout_marginEnd="@dimen/margin12"
                                    android:layout_marginBottom="@dimen/margin8"
                                    app:loadCircleImage="@{user.photoUrl}"
                                    android:padding="4dp"
                                    android:layout_centerInParent="true"
                                    tools:src="@mipmap/ic_camera_launcher"/>


                                <Button
                                    android:id="@+id/btnEditBanner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/edit_button"
                                    android:textColor="@android:color/black"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@color/white._a"
                                    android:visibility="gone"
                                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                    />


                            </RelativeLayout>
                            
                        </RelativeLayout>

                    </LinearLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        app:loadingImage="@{user.photoUrl}"
                        app:elevation="@dimen/default_elevation"
                        app:layout_collapseMode="pin"
                        app:layout_scrollFlags="scroll|enterAlways"
                        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                        />

                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/svUserProfile"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llUserProfileFragment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/favorite"
                        layout="@layout/userprofile_display_business_layout"
                        />

                    <include
                        android:id="@+id/reviews"
                        layout="@layout/userprofile_display_business_layout"
                        />

                    <include
                        android:id="@+id/recentVisits"
                        layout="@layout/userprofile_display_business_layout"
                        />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>


</layout>
